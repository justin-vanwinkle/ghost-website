{
  "enableDeveloperExperiments": true,
  "url": "https://www.jvanwinkle.com",
  "server": {
    "port": 2368,
    "host": "0.0.0.0"
  },
  "database": {
   "client": "mysql",
   "connection": {
     "host": "mysql-ghost.default.svc.cluster.local",
     "port": 3306,
     "user": "root",
     "database": "personal",
     "ssl": false
   }
  },
  "mail": {
    "transport": "Direct"
  },
  "logging": {
    "transports": [
      "file",
      "stdout"
    ]
  },
  "process": "systemd",
  "paths": {
    "contentPath": "/var/lib/ghost/content"
  },
  "storage": {
    "active": "ghost-storage-azure",
    "ghost-storage-azure": {
      "connectionString": null,
      "container": "blog",
      "cdnUrl": "jvanwinkle.azureedge.net",
      "useHttps" : "true",
      "useDatedFolder" : true
    }
  }
}
